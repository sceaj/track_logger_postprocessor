from enum import Enum
    
class DataState(object):
    '''
    classdocs
    '''
    
    names = Enum([
            'Time',
            'GPS_Time',
            'GPS_Date',
            'Longitude',
            'Latitude',
            'Altitude',
            'X',
            'Y',
            'Z',
            'KPH',
            'Heading',
            'Lap',
            'RPM',
            'Gear',
            'Throttle',
            'ECU_Throttle',
            'Brake',
            'Clutch',
            'Steering_Angle',
            'Steering_Rate',
            'Coolant_Temperature',
            'Oil_Pressure',
            'Oil_Temperature',
            'LF_KPH',
            'RF_KPH',
            'LR_KPH',
            'RR_KPH',
            'PSM',
            'Accuracy'
    ])

    def __init__(self):
        '''
        Constructor
        '''
        self.state_time = 0.0
        self.state = dict()
    
    def get_data_names(self):
        return list(DataState.names)

    def set_data_item(self, name, value):
        if name not in DataState.names:
            raise ValueError("The name [{0}] is not in the defined set of data names: {1}".format(name, DataState.names))
        self.state[name] = value
        
    def get_data_item(self, name):
        if name not in DataState.names:
            raise ValueError("The name [{0}] is not in the defined set of data names: {1}".format(name, DataState.names))
        return self.state[name]